<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fridgetime.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fridgetime.ui.dashboard.SavedRecipesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_saved_recipes" />

    <fragment android:id="@+id/navigation_fridge"
        android:name="com.example.fridgetime.ui.fridge.FridgeFragment"
        android:label="Fridge"
        tools:layout="@layout/fridge_fragment"
        />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fridgetime.ui.settings.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
</navigation>